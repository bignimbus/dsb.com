.main-nav {
    text-align: center;
    li {
        margin: 1rem auto;
        position: relative;
        a {
            color: inherit;
            text-decoration: none;
            &:before,
            &:after {
                background: url(/assets/images/dsb_chili.png) no-repeat;
                background-size: contain;
                content: '';
                display: inline-block;
                height: 1rem;
                opacity: 0;
                transition: opacity .3s;
                width: 1rem;
            }
            &:hover {
                &:before,
                &:after {
                    opacity: 1;
                }
            }
        }
    }
}