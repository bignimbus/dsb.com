html {
    height: 100%;
    position: relative;
}

body {
    $table_cloth();
    height: 100%;
    margin: 0;
    padding: 0;
    position: relative;
}

#container {
    center(max_width = 900px);
    box-shadow: 0 0 26px 8px #000;
    position: relative;
}

.main-header {
    stack(pad = 0);
    background-color: $color_1;
    position: relative;
    h1 {
        padding: .5rem 0;
        text-align: left;
        +mobile() {
            text-align: center;
        }
        .logo {
            background: url(/assets/images/dsb_fish.png) no-repeat;
            background-size: cover;
            display: inline-block;
            height: 64px;
            width: 100px;
        }
        .header-text,
        .icons {
            display: inline-block;
            vertical-align: bottom;
            +mobile() {
                display: block;
                font-size: 1.3rem;
            }
            a, span {
                color: $color_5;
                transition: color $interval;
                &:hover {
                    color: $color_2;
                    cursor: pointer;
                }
            }
        }
    }
    .hero {
        position: absolute;
        top: 0;
        z-index: -1;
        img {
            $grayscale();
            width: 100%;
        }
    }
}

.main-nav {
    stack(pad = 0);
    background-color: $color_3;
    color: $color_4;
    position: relative;
    text-shadow: 0 0 3px $color_3;
    span.fa {
        display: none;
    }
    ul {
        background-color: $color_3;
    }
}

+mobile() {
    .main-nav {
        height: $mobile_nav_size;
        margin: 0;
        min-height: 0;
        padding: 0;
        span.fa {
            display: inherit;
            font-size: $mobile_nav_size;
        }
        ul {
            cf();
            // height: 100%;
            position: fixed;
            top: 5000px;
            transition: top $interval, position $interval;
            width: 100%;
            z-index: 2;
        }
        &.show {
            ul {
                position: absolute;
                top: $mobile_nav_size;
            }
        }
    }
}

.main-content {
    stack(pad = 0);
    cf();
    background-color: $color_1;
    min-height: 80%;
    position: relative;
    > div > * > div {
        display: none;
    }
}

.main-footer {
    stack(pad = 0);
    background-color: $color_2;
    bottom: 0;
    color: #fff;
}

div, nav, header, footer, section, ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}